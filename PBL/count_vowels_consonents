
import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner sc=new Scanner(System.in);
	    
	    String s1=sc.nextLine().toLowerCase();
	    int count1=0;
	    int count2=0;
	    
	   for(char c:s1.toCharArray()){
	       if(c=='a'||c=='e'||c=='i'||c=='o'||c=='u'){
	           count1+=1;
	       }else{
	           count2+=1;
	       }
	   }
	   System.out.println(count1);
	   System.out.println(count2);
	    }
	}

